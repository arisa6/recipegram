<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        新規レシピ作成
      </h1>
    </div>
  </div>
</section>

<% if @recipe.errors.any? %>
  <div class="notification is-danger">
    <h2><%= pluralize(@recipe.errors.count, "error") %> prohibited this object from being saved: not successfully</h2>
     <ul>  <!--pluralize エラーの数に合わせて複数形。単数形に表示を合わせてくれる-->
        <% @recipe.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
     </ul>
  </div>
<% end %>


<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
          <%= form_with model: @recipe do |f| %>
           <div class="field">
            <%= f.label :title,"レシピ名", class: "label" %>
            <%= f.text_field :title, class: "input" %>
           </div>
           
           <div class="field">
            <%= f.label :body, "作り方", class: "label" %>
            <%= f.text_area :body, class: "input" %>  
           </div>
           
           <div class="field">
            <%= f.label :image, "写真", class: "label" %>
            <%= f.file_field :image, accept: "image/*" %>
           </div>
             <%= f.submit '投稿', class: "button is-success" %>
            <% end %>
      </div>
    </div>
  </div>
</section>





